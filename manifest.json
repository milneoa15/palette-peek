{
  "manifest_version": 3,
  "name": "Palette Peek",
  "version": "1.0.0",
  "description": "Inspect the dominant colors of the current page in a single click and copy swatches instantly.",
  "action": {
    "default_title": "Palette Peek",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/extractColors.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
